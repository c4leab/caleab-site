---
const { title, description } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
  </head>
  <body class="bg-white text-black dark:bg-black dark:text-white font-sans">
    <div class="min-h-screen flex max-w-5xl mx-auto px-6">
      <!-- Sticky sidebar -->
      <aside class="w-1/3 sticky top-0 h-screen hidden md:flex items-start pt-32 px-4">
        <div class="flex flex-col space-y-6 items-start">
       
          <nav class="text-sm space-y-2">
            <ul class="space-y-1">
              <li><a href="/" >Caleab Onyango</a></li>
              <li><a href="/blog" >Writing</a></li>
              <li><a href="/now" >Now</a></li>
              <li>
                <a href="/rss.xml" target="_blank" rel="noopener noreferrer" class="hover:underline">
                  RSS 
                </a>
              </li>
            </ul>
          </nav>
        </div>
      </aside>

      <!-- Main content -->
      <main class="w-full md:w-2/3 py-20">
        <slot />
      </main>
    </div>
  </body>
</html>
